<%- include('partials/header') %>

<!-- Hero Section -->
    <main class="min-h-screen  relative overflow-hidden">
        <!-- Background Elements -->
        <div class="absolute inset-0 overflow-hidden">
            <div class="floating-animation absolute top-20 left-10 w-72 h-72 bg-blue-500 rounded-full opacity-10 blur-3xl"></div>
            <div class="floating-animation absolute bottom-20 right-10 w-96 h-96 bg-purple-500 rounded-full opacity-10 blur-3xl" style="animation-delay: -3s;"></div>
        </div>
        
        <!-- Content -->
        <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-32 pb-20">
            <div class="text-center">
                <!-- Main Heading -->
                <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold mb-6 text-shadow">
                    <span class="bg-gradient-to-r from-blue-400 via-purple-500 to-pink-500 bg-clip-text text-transparent">
                        Pin Your 
                    </span>
                    <br>
                    <span class="text-white">Inspiration</span>
                </h1>
                
                <!-- Subtitle -->
                <p class="text-xl md:text-2xl text-gray-300 mb-8 max-w-3xl mx-auto leading-relaxed">
                    Discover, collect, and organize visual content that inspires you. Create beautiful boards, share your creativity, and explore endless possibilities.
                </p>
                
                <!-- CTA Buttons -->
                <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-16">
                    <a href="/upload">
                    <button class="bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 text-white font-semibold px-8 py-4 rounded-lg text-lg transition-all duration-200 transform hover:scale-105 shadow-lg">
                        Start Creating
                    </button>
                    </a>
                    <a href="/board">
                    <button class="border-2 border-gray-600 hover:border-gray-400 text-gray-300 hover:text-white font-semibold px-8 py-4 rounded-lg text-lg transition-all duration-200 hover:bg-gray-800">
                        Explore Boards
                    </button>
                    </a>
                </div>
                
                <!-- Feature Cards -->
                  <div class="grid md:grid-cols-3 gap-8 max-w-4xl mx-auto">
                    <div class="backdrop-blur-custom rounded-xl p-6 border border-gray-700 hover:border-gray-600 transition-all duration-200 transform hover:scale-105">
                        <div class="w-12 h-12 bg-blue-600 rounded-lg flex items-center justify-center mx-auto mb-4">
                            <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z"/>
                            </svg>
                        </div>
                        <h3 class="text-xl font-semibold mb-2">Create & Share</h3>
                        <p class="text-gray-400">Upload your favorite images, create pins, and share your unique perspective with the world.</p>
                    </div>
                    
                    <div class="backdrop-blur-custom rounded-xl p-6 border border-gray-700 hover:border-gray-600 transition-all duration-200 transform hover:scale-105">
                        <div class="w-12 h-12 bg-purple-600 rounded-lg flex items-center justify-center mx-auto mb-4">
                            <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1v-6zM14 9a1 1 0 00-1 1v6a1 1 0 001 1h2a1 1 0 001-1v-6a1 1 0 00-1-1h-2z"/>
                            </svg>
                        </div>
                        <h3 class="text-xl font-semibold mb-2">Organize Boards</h3>
                        <p class="text-gray-400">Create custom boards to organize your pins by theme, project, or mood. Keep everything perfectly curated.</p>
                    </div>
                    
                    <div class="backdrop-blur-custom rounded-xl p-6 border border-gray-700 hover:border-gray-600 transition-all duration-200 transform hover:scale-105">
                        <div class="w-12 h-12 bg-pink-600 rounded-lg flex items-center justify-center mx-auto mb-4">
                            <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                            </svg>
                        </div>
                        <h3 class="text-xl font-semibold mb-2">Discover Content</h3>
                        <p class="text-gray-400">Explore endless inspiration from our community. Find new ideas, trends, and creative content daily.</p>
                    </div>
                  </div>
        
        <!-- Bottom Gradient -->
        <div class="absolute bottom-0 w-full h-32 bg-gradient-to-b from-transparent to-gray-900"></div>
    </main>

<%- include('partials/footer') %>
